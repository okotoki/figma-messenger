{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "target": "es5",
    "lib": ["es2016", "dom"],
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@figma/plugin-typings"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "include": [
      "src"
  ],
  "exclude": ["dist", "node_modules"]
}
